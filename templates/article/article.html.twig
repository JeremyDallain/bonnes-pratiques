{% extends 'base.html.twig' %}

{% block title %}Mes articles{% endblock %}

{% block body %}
    <h1 class="text-center">Mes articles ({{ app.user.fullName }})</h1>    

    {% if articles | length > 0 %}    
        {% for article in articles %}
            <div class="border border-primary m-2 p-2">
                <h3>{{ article.title }}</h3>
                <p>{{ article.content|raw }}</p>
                <em>édité le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H') }}h</em><br>
                <a class="btn btn-sm btn-primary" href="{{ path('article_show', {'id': article.id}) }}">Voir</a>
                <a class="btn btn-sm btn-warning" href="{{ path('article_edit', {'id': article.id}) }}">Editer</a>
                <a class="btn btn-sm btn-danger" href="{{ path('article_delete', {'id': article.id}) }}">Supprimer</a>
            </div>
        {% endfor %}
    {% else %}
        <p>Vous n'avez posté aucun article</p>
    {% endif %}

{% endblock %}
