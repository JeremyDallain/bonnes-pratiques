{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>Liste des articles :<a class="btn btn-sm btn-success" href="{{ path('article_create') }}">Nouvel article</a></h1>

    {% for article in articles %}
        <div class="border m-2 p-2">
            <h3>{{ article.title }}</h3>
            <p>{{ article.content }}</p>
            <em>édité le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H') }}h</em>
            <a class="btn btn-sm btn-primary" href="{{ path('article_show', {'id': article.id}) }}">Voir</a>
            <a class="btn btn-sm btn-warning" href="{{ path('article_edit', {'id': article.id}) }}">Editer</a>
            <a class="btn btn-sm btn-danger" href="{{ path('article_delete', {'id': article.id}) }}">Supprimer</a>
        </div>
    {% endfor %}
{% endblock %}
